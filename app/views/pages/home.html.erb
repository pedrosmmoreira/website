<% content_for(:title, "Pedro Moreira") %>
<% content_for(:description, "Software developer, occasional writer.") %>
<% content_for(:head) do %>
  <%= render "application/journal_structured_data" %>
<% end %>

<section class="hero">
  <div class="hero-bio">
    <p>Hey, I'm Pedro.</p>
    <p>
    I've spent over a decade building reliable systems &amp; growing reliable teams â€” from large-scale ticketing at <a href="https://ventrata.com">Ventrata</a>, to EV charging infrastructure at <a href="https://char.gy">char.gy</a>, to government digital services with <a href="https://unboxed.co">Unboxed</a>. I served as CTO and Board Observer at <a href="https://specle.net">Specle</a>.
    </p>
    <p>I write about engineering leadership, reliability, and software craft</p>
  </div>
</section>

<hr class="section-divider">

<section class="journal-listing">
  <div class="journal-grid">
    <% last_year = nil %>
    <% @entries.each do |entry| %>
      <% year = entry.date.year %>
      <% year_start = year != last_year %>
      <a href="<%= journal_entry_path(slug: entry.slug) %>" class="journal-grid-row<%= ' journal-grid-year-start' if year_start %>">
        <span class="journal-grid-year"><%= year if year_start %></span>
        <span class="journal-grid-title"><%= entry.title %></span>
      </a>
      <% last_year = year %>
    <% end %>
  </div>
</section>
